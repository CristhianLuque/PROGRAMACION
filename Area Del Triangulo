#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int main () {
	float base, altura, area;
	cout<<"         Calculo del area del Triangulo \n\n ";
	cout<<"Ingrese altura: ";
	cin>>altura;
	cout<<"Ingrese base: ";
	cin>>base;

	area = (base*altura)/2;
	cout<<"El area es: ";
	cout<<area;
	getch();

}
