#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "Math.h"
using namespace std;

void main ()


{ 
	int suma,N;
	float i;
	cout<< " Ingresa el valor de N:";
	cin>> N;
	suma=0;
	cout<<"suma=";
	for (i=1;i<=N;i++)
	{	
		suma=suma +pow(i,2);
    cout<< i<<"**2+";
	}
	cout<< "\n La suma de los "<<N<<" primeros cuadrados naturales:" << suma;
    
	getch();
	;
}

