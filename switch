#include"stdafx.h"
#include<iostream>
#include"conio.h"
#include"math.h"

int main()
{
int a, b, r, opcion;

cout<<"MENU USANDO SWITCH";
cin>>opcion;

cout<<"INGRESE A";
cout<<"INGRESE B";
cin>>a;
cin>>b;

cout << “1.- Suma” << endl;
cout << “2.- Resta” << endl;
cout << “3.- Producto” << endl;
cout << “4.- División” << endl;
cout << “Elige una opción: “ << endl;
cin << opcion;
switch (opcion) {
case 1: r = a + b; break;
case 2: r = a – b; break;
case 3: r = a * b; break;
case 4: r = a / b; break;
default: cout << “Opcion invalida” << endl;
}
cout << “El resultado es “ << r << endl;
system("cls");

getch()
}
